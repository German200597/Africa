import json  
from pprint import pprint
import operator

def reader(address):
    with open(address, encoding='utf-8') as f:
        data = json.load(f)   
    new_data = data['rss']['channel']['items']
    return new_data

data_from_file=reader('newsafr.json')

def sorter(data_from_file, number):
    counter = {}
    for new in data_from_file:
        news=list(new['description'].split())
        count=0
        for word in news: 
            if len(word)>number:
                if word in counter:
                    count+=1
                    counter[word] = int(count)
                else:
                    count=1
                    counter[word] = count                
    result=sorted(counter.items(), key=operator.itemgetter(1), reverse=True) 
    return result

data_from_file_two=sorter(data_from_file, 6)

def top(data_from_file_two):    
    count=0 
    for i in data_from_file_two:
        count+=1
        if count<=10:
            return i[0]

reader('newsafr.json')            
sorter(data_from_file, 6)    
top(data_from_file_two)        



    







 


    